<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:gravity="center|center_horizontal|center_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dip"
                android:layout_weight=".35"
                android:layout_height="wrap_content"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:text="@string/app_name"
                android:textSize="16dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="AccessPoint" />

            <Spinner
                android:id="@+id/wifiap"
                android:layout_width="0dip"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:entries="@array/iimaAPs"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" 
            android:gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dip"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Username" />

            <EditText
                android:id="@+id/username"
                android:layout_width="0dip"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dip"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dip"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" >
            
            <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="10sp" />
                    
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center" >

            <Button
                android:id="@+id/button2"
                android:layout_width="0dip"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="showHelpBox"
                android:text="Help"/>
            
            <Button
                android:id="@+id/button3"
                android:layout_width="0dip"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="saveTestWiFiConfig"
                android:text="SAVE" />
            
            <Button
                android:id="@+id/button1"
                android:layout_width="0dip"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="showAboutBox"
                android:text="About" />
            
        </TableRow>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/advConfigToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toggleAdvConfig"
            android:text="Advanced Config" />

        <ListView
            android:id="@+id/aceList"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >

        </ListView>

    </TableLayout>

</LinearLayout>
